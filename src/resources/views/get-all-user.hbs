<h1>List of all user</h1>
<div class="mt-4">
    <form method="GET">
        <div class="form-group">
            <label for="key-words">Typing keywords</label>
           <div class="row">
               <input type="text" name="q" class="form-control" id="key-words" placeholder="Typing key words" style="width: 50%">
               <button type="submit" class="btn btn-primary">Search</button>
           </div>
        </div>
    </form>
</div>
<table class="table">
    <thead>
    <tr>
        <th scope="col">#</th>
        <th scope="col">First name</th>
        <th scope="col">Last name</th>
        <th scope="col">Email</th>
        <th scope="col">Action</th>
    </tr>
    </thead>

        <tbody>
        {{#each users}}
        <tr>
            <th scope="row">{{sum @index 1}}</th>
            <td>{{this.first_name}}</td>
            <td>{{this.last_name}}</td>
            <td>{{this.email}}</td>
            <td>
                <a class="btn btn-primary" href="#" role="button" style="margin-right: 10px">Update</a>
                <a class="btn btn-primary" href="#" role="button" style="margin-right: 10px">Delete</a>
                <a class="btn btn-primary" href="/user/{{this._id}}/add-role" role="button">Add Role</a>
            </td>
        </tr>
        {{/each}}
        </tbody>

</table>

