<h1>Role management</h1>

<a class="btn btn-primary" href="role/create" role="button" style="margin-bottom: 20px">Create new role</a>

<table class="table">
    <thead>
    <tr>
        <th scope="col">#</th>
        <th scope="col">First name</th>
        <th scope="col">Last name</th>
        <th scope="col">Email</th>
        <th scope="col">Action</th>
    </tr>
    </thead>

    <tbody>
    {{#each users}}
        <tr>
            <th scope="row">1</th>
            <td>{{this.first_name}}</td>
            <td>{{this.last_name}}</td>
            <td>{{this.email}}</td>
            <td>
                <a class="btn btn-primary" href="#" role="button" style="margin-right: 10px">Update</a>
                <a class="btn btn-primary" href="#" role="button" style="margin-right: 10px">Delete</a>
                <a class="btn btn-primary" href="#" role="button">Add Role</a>
            </td>
        </tr>
    {{/each}}
    </tbody>

</table>